<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>WellcomeServlet</servlet-name>
        <servlet-class>controller.WellcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlphabetServlet</servlet-name>
        <servlet-class>controller.AlphabetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BangCuuChuong</servlet-name>
        <servlet-class>controller.BangCuuChuong</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BangCuuChuongXServlet</servlet-name>
        <servlet-class>controller.BangCuuChuongXServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WellcomeServlet</servlet-name>
        <url-pattern>/WellcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlphabetServlet</servlet-name>
        <url-pattern>/AlphabetServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BangCuuChuong</servlet-name>
        <url-pattern>/BangCuuChuong</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BangCuuChuongXServlet</servlet-name>
        <url-pattern>/BangCuuChuongXServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
